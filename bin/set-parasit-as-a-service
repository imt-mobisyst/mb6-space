#!/usr/bin/env bash

PROJECT_PATH=`dirname $0`

echo  """
[Unit]
Description=ros2 mb6-basic parasit node
After=network.target

[Service]
User=$USER
Group=$USER
ExecStart=/bin/bash -c \"source `realpath $PROJECT_PATH`/pibot-run-commands.bash ; ros2 run mb6_basic parasit\"
Type=simple

[Install]
WantedBy=network.target
""" > mb6-parasit.service

sudo mv mb6-parasit.service /etc/systemd/system/
sudo systemctl daemon-reload
sudo systemctl enable mb6-parasit.service

echo "You can start the service: 'service mb6-parasit start'"
