#!/usr/bin/env bash

PROJECT_PATH=`dirname $0`

echo  """
[Unit]
Description=mb6 update process (Pull + Patch)
After=network.target

[Service]
User=$USER
Group=$USER
ExecStart=`realpath $PROJECT_PATH`/update.sh
Type=simple

[Install]
WantedBy=network-online.target
""" > mb6-update.service

sudo mv mb6-update.service /etc/systemd/system/
sudo systemctl daemon-reload
sudo systemctl enable mb6-update.service

echo "You can start the service: 'service mb6-update start'"
