#!/bin/bash

echo "
                    --- Tools: system and developement ---
"

sudo apt install -y git gnome-tweaks git-lfs openssh-server sshfs \
    tmux diodon meld \
    build-essential default-jre cmake \
    python3 python3-pip \
    freecad prusa-slicer \
    pandoc \
    texlive texlive-base biber texlive-latex-recommended \
	texlive-publishers texlive-bibtex-extra texlive-science texlive-luatex \
	latexila pandoc wkhtmltopdf \
	meld
pip3 install beautifulsoup4 matplotlib

echo "
                    --- Git Configuration ---
"

git config --global user.name bot
git config --global user.email bot@mb6.imt-nord-europe.fr
git config --global credential.helper cache
git config --global http.sslVerify false
git-lfs install

echo "
                    --- ROS Environement ---
"

./install-ros
./install-realsense
./install-gazebo

#echo "# Tools"
#echo "#----------------------------"
sudo dpkg -i deps/code_1.79.2-1686734195_amd64.deb
